<UserControl x:Class="ImageStitching.ImageDisplay.View.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageStitching.ImageDisplay.View">
    <Grid Margin="10">
        <Border CornerRadius="8" BorderBrush="#5BE6E6" BorderThickness="3">
            <Image x:Name="Image" Source="{Binding Image}" MinWidth="200" MinHeight="200" MaxWidth="350" MaxHeight="350" Stretch="Uniform" Margin="5"/>
        </Border>
    </Grid>
</UserControl>
